<FILE Name="/boot/config/plugins/auto-unlock/unraid-auto-unlock-2025.12.16.0447-noarch-1.txz">
<URL>https://github.com/dkaser/unraid-auto-unlock/releases/download/2025.12.16.0447/unraid-auto-unlock-2025.12.16.0447-noarch-1.txz</URL>
<SHA256>c351ca8d598dea5ef191df5a77f651f5b12a6001b6e82ca2e178b0aac1bc3e7d</SHA256>
</FILE>

<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/auto-unlock/unraid-auto-unlock-2025.12.16.0447-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/auto-unlock/unraid-auto-unlock-*.txz 2>/dev/null | grep -v '2025.12.16.0447')

# remove other branch (if switching between main and preview)

rm -f /boot/config/plugins/auto-unlock-preview.plg
rm -f /var/log/plugins/auto-unlock-preview.plg


echo ""
echo "----------------------------------------------------"
echo " auto-unlock has been installed."
echo " Version: 2025.12.16.0447"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<FILE Name="/boot/config/plugins/auto-unlock/.gitignore">
<INLINE>
<![CDATA[
unlock.enc
state.json
config.txt
]]>
</INLINE>
</FILE>

<!--
The 'unlock' script. This only runs if /var/local/emhttp/var.ini does not exist yet.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
if [ ! -f /var/local/emhttp/var.ini ]; then
    /usr/local/php/unraid-auto-unlock/bin/autounlock unlock >> /var/log/autounlock.log 2>&1 &
fi

]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-auto-unlock

rm -rf /usr/local/emhttp/plugins/auto-unlock
rm -rf /boot/config/plugins/auto-unlock
]]>
</INLINE>
</FILE>

</PLUGIN>
