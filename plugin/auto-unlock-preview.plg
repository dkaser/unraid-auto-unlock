<FILE Name="/boot/config/plugins/auto-unlock/unraid-auto-unlock-2025.12.03.0512-noarch-1.txz">
<URL>https://github.com/dkaser/unraid-auto-unlock/releases/download/2025.12.03.0512/unraid-auto-unlock-2025.12.03.0512-noarch-1.txz</URL>
<SHA256>2349f434da16ea57ffccc96a1df5ee00946d3dcec191f02fb5d390fbf258813d</SHA256>
</FILE>

<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/auto-unlock/unraid-auto-unlock-2025.12.03.0512-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/auto-unlock/unraid-auto-unlock-*.txz 2>/dev/null | grep -v '2025.12.03.0512')

echo ""
echo "----------------------------------------------------"
echo " auto-unlock has been installed."
echo " Version: 2025.12.03.0512"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'unlock' script. This only runs if /var/local/emhttp/var.ini does not exist yet.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
if [ ! -f /var/local/emhttp/var.ini ]; then
    /usr/local/php/unraid-auto-unlock/bin/autounlock >> /var/log/autounlock.log 2>&1 &
fi

]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-auto-unlock

rm -rf /usr/local/emhttp/plugins/auto-unlock
rm -rf /boot/config/plugins/auto-unlock
]]>
</INLINE>
</FILE>

</PLUGIN>
