<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/auto-unlock/unraid-auto-unlock-0.0.2-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/auto-unlock/unraid-auto-unlock-*.txz 2>/dev/null | grep -v '0.0.2')

echo ""
echo "----------------------------------------------------"
echo " auto-unlock has been installed."
echo " Version: 0.0.2"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-auto-unlock

rm -rf /usr/local/emhttp/plugins/auto-unlock
rm -rf /boot/config/plugins/auto-unlock
]]>
</INLINE>
