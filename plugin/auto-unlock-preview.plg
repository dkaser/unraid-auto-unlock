<FILE Name="/boot/config/plugins/auto-unlock/unraid-auto-unlock-2025.12.08.0448-noarch-1.txz">
<URL>https://github.com/dkaser/unraid-auto-unlock/releases/download/2025.12.08.0448/unraid-auto-unlock-2025.12.08.0448-noarch-1.txz</URL>
<SHA256>399fab913f7199223f11a83353bbd95b418ec6cfe886b7ed746f04e53aedd62a</SHA256>
</FILE>

<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/auto-unlock/unraid-auto-unlock-2025.12.08.0448-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/auto-unlock/unraid-auto-unlock-*.txz 2>/dev/null | grep -v '2025.12.08.0448')

# remove other branch (if switching between main and preview)
rm -f /boot/config/plugins/auto-unlock.plg
rm -f /var/log/plugins/auto-unlock.plg
# Update plugin name for non-main branches
sed -i "s/Automatic Disk Unlock/Automatic Disk Unlock (Preview)/" /usr/local/emhttp/plugins/auto-unlock/README.md


echo ""
echo "----------------------------------------------------"
echo " auto-unlock has been installed."
echo " Version: 2025.12.08.0448"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<FILE Name="/boot/config/plugins/auto-unlock/.gitignore">
<INLINE>
<![CDATA[
unlock.enc
state.json
config.txt
]]>
</INLINE>
</FILE>

<!--
The 'unlock' script. This only runs if /var/local/emhttp/var.ini does not exist yet.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
if [ ! -f /var/local/emhttp/var.ini ]; then
    /usr/local/php/unraid-auto-unlock/bin/autounlock >> /var/log/autounlock.log 2>&1 &
fi

]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-auto-unlock

rm -rf /usr/local/emhttp/plugins/auto-unlock
rm -rf /boot/config/plugins/auto-unlock
]]>
</INLINE>
</FILE>

</PLUGIN>
