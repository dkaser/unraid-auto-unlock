<FILE Name="/boot/config/plugins/auto-unlock/unraid-auto-unlock-0.0.1-noarch-1.txz">
<URL>https://github.com/dkaser/unraid-auto-unlock/releases/download/0.0.1/unraid-auto-unlock-0.0.1-noarch-1.txz</URL>
